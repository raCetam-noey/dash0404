<mvc:View
	controllerName="dash0404.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:cssgrid="sap.ui.layout.cssgrid"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	height="100%"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:ui="sap.ui.table"
>
	<Page
		id="_IDGenPage1"
		showHeader="false"
	>
		<content>
			<form:SimpleForm id="_IDGenSimpleForm1">
				<Carousel
					class="sapUiContentPadding"
					id="carouselEmpty"
					height="70%"
				>
					<IllustratedMessage
						id="_IDGenIllustratedMessage1"
						enableVerticalResponsiveness="true"
						illustrationSize="Spot"
						title="ASPN 운영 관리 솔루션"
						description="ASPN 운영 관리 솔루션은 SAP의 기술과 경험을 바탕으로 제공되는 솔루션으로, 더 나은 경영을 위한 기술적인 지원을 제공합니다."
						illustrationType="sapIllus-NoActivities"
					/>
				</Carousel>
			</form:SimpleForm>
			<form:SimpleForm
				title="{i18n>chartForm}"
				id="_IDGenSimpleForm2"
				layout="ResponsiveGridLayout"
			>
				<l:Grid
					id="_IDGenGrid1"
					defaultSpan="XL12 L12 M12 S12"
				>
					<w:Card
						id="_IDGenCard1"
						manifest="{manifests>/chart1}"
						action="onPressChart"
					>	
						<w:customData>
							<c:CustomData
								key="press"
								value="onPressChart"
							/>
						</w:customData>
						<w:layoutData>
							<f:GridContainerItemLayoutData
								id="_IDGenGridContainerItemLayoutData1"
								rows="6"
								columns="6"
							/>
						</w:layoutData>
					</w:Card>
				</l:Grid>
				<l:Grid
					id="_IDGenGrid2"
					defaultSpan="XL12 L12 M6 S12"
				>
					<w:Card
						id="_IDGenCard2"
						manifest="{manifests>/donut}"
						action="onPressDonut"
					>	
						<w:customData>
							<c:CustomData
								key="press"
								value="onPressDonut"
							/>
						</w:customData>
						<w:layoutData>
							<f:GridContainerItemLayoutData
								id="_IDGenGridContainerItemLayoutData2"
								rows="1"
								columns="1"
							/>
						</w:layoutData>
					</w:Card>
				</l:Grid>
			</form:SimpleForm>
			<form:SimpleForm
				id="_IDGenSimpleForm3"
				layout="ResponsiveGridLayout"
				title="{i18n>boardForm}"
			>
				<l:Grid
					id="_IDGenGrid3"
					defaultSpan="XL12 L12 M6 S12"
				>
					<Table
						id="table"
						mode="SingleSelectMaster"
						growing="true"
						growingThreshold="11"
						beforeOpenContextMenu="onBeforeOpenContextMenu"
						items="{/StateBoard}"
						selectionChange="onPressTable"
					>
						<contextMenu>
							<Menu id="_IDGenMenu1">
								<MenuItem
									id="_IDGenMenuItem1"
									text="Move to Selected Products"
									press="moveToSelectedProductsTable"
								/>
							</Menu>
						</contextMenu>
						<columns>
							<Column
								id="_IDGenColumn1"
								hAlign="Begin"
								width="30%"
							>
								<Text
									id="_IDGenText1"
									text="항목"
								/>
							</Column>
							<Column
								id="_IDGenColumn2"
								hAlign="Center"
								width="25%"
							>
								<Text
									id="_IDGenText2"
									text="Status"
								/>
							</Column>
							<Column
								id="_IDGenColumn3"
								hAlign="Begin"
								width="45%"
							>
								<Text
									id="_IDGenText3"
									text="결과 지표"
								/>
							</Column>
						</columns>
						<dragDropConfig>
							<dnd:DragInfo
								id="_IDGenDragInfo1"
								groupName="available2selected"
								sourceAggregation="items"
							/>
							<dnd:DropInfo
								id="_IDGenDropInfo1"
								groupName="selected2available"
								drop="onDropAvailableProductsTable"
							/>
						</dragDropConfig>
						<items>
							<ColumnListItem
								id="_IDGenColumnListItem1"
								vAlign="Middle"
								type="Navigation"
								press="onPressTable"
							>
								<cells>
									<Text
										id="_IDGenText4"
										text="{Scope}"
										wrapping="false"
									/>
									<c:Icon
										id="_IDGenIcon1"
										color="{= ${Status} === 'A' ? 'green' : ${Status} === 'B' ? '#E69A17' : 'red' }"
										src="{= ${Status} === 'A' ? 'sap-icon://status-positive' : ${Status} === 'B' ? 'sap-icon://status-critical' : 'sap-icon://status-negative' }"
									/>
									<Text
										id="_IDGenText5"
										text="{Result}"
										wrapping="false"
									/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:Grid>
			</form:SimpleForm>
			<form:SimpleForm id="_IDGenSimpleForm4"/>
		</content>
	</Page>
</mvc:View>